#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

P_PREFIX = __PREFIX__
P_SUFFIX = __SUFFIX__

MODULE   = __MODULE__
ARCHIVE  = $(subst ::,-,$(MODULE))
PACKAGE  = $(addsuffix $(P_SUFFIX), $(addprefix $(P_PREFIX), $(shell echo $(ARCHIVE) | tr A-Z a-z)))
VERSION  = $(shell echo $(CURDIR)/upstream/* | sed -e 's/^.*$(ARCHIVE)-\(.*\)\.tar.*/\1/p;d')
BUILDDIR = $(CURDIR)/$(ARCHIVE)-$(VERSION)

extract-stamp:
	tar xf $(CURDIR)/upstream/$(ARCHIVE)-$(VERSION).tar.gz
	touch $@

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	(cd $(BUILDDIR); perl __MODULE_MAKE__)
	touch $@

build: build-arch build-indep
build-arch: build-stamp
build-indep: build-stamp
build-stamp: extract-stamp configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	__MODULE_BUILD__
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp extract-stamp

	# Add here commands to clean up after the build process.
	rm -rf $(BUILDDIR)

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	# Add here commands to install the package into debian/$(PACKAGE).
	__MODULE_INSTALL__
__MANUAL_INSTALL__

	# remove perllocal.pod, .packlist and empty directory
	find $(CURDIR)/debian/$(PACKAGE) -name perllocal.pod -or -name .packlist | xargs rm -f
	while true; do \
		d=`find $(CURDIR)/debian/$(PACKAGE) -type d -empty`; \
		test -z "$$d" && break; \
		for D in $$d; do rmdir $$D; done; \
	done

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs -p $(PACKAGE)
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_perl
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
